#include <Adafruit_NeoPixel.h>
#include <string.h>

const byte neopixelPin = 10; 
int y = 0;
int x=255;
int Arreglo[10][10][3];
String mat="50-10-10-/10-10-10-/10-10-10-/19-19-19-/";
Adafruit_NeoPixel neopixel = Adafruit_NeoPixel(100, neopixelPin, NEO_GRB + NEO_KHZ800);


void setup() {
  Serial.begin(9600);
  neopixel.begin();  
  leer_mat();
}

void loop() {    
  
}

void ImpMat(){
  for(int i=0;i<20;i++){    
    for(int j=0;j<100;j++){
      	if(j%2==0)  neopixel.setPixelColor(j, x, 0, y); 
      	else  neopixel.setPixelColor(j, y, 0, x); 
            	  
    }
    neopixel.show();        
    delay(1000);
  	x-=10;
  	y+=10;
  }   
  neopixel.clear(); 
  neopixel.show();
  delay(100);     
}

void leer_mat(){
  unsigned int c=0,k=0;
  String values, Color[3], C;
  unsigned int colors[100][3];
  for(int i=0;i<mat.length();i++){
    if(mat[i]=='/'){
      values = getPixel(i+1);
    }
  }
}
String getPixel(int x){
  String pixel;
  for(int i=x;mat[i]!='/';i++){
    if(mat[i]=='/'){
      	Serial.println(pixel);
    }
    else{
      pixel+=mat[i];
    }
  }
  return pixel;
}